<Page x:Class="NeUrokDBManager.WPF.Views.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:NeUrokDBManager.WPF.Views.Pages"
      mc:Ignorable="d"
      Title="MenuPage" Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="ScrollBarThumb"
               TargetType="{x:Type Thumb}">
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Setter Property="OverridesDefaultStyle"
                    Value="true"/>
            <Setter Property="IsTabStop"
                    Value="false"/>
            <Setter Property="Focusable"
                    Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border
                            CornerRadius="5"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="VerticalScrollBar"
                         TargetType="{x:Type ScrollBar}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.00001*"/>
                </Grid.RowDefinitions>
                <Border
                    Grid.RowSpan="3"
                    CornerRadius="5"
                    Background="Transparent"
                    BorderThickness="0.5"/>

                <Track
                    Name="PART_Track"
                    Grid.Row="1"
                    IsDirectionReversed="true">
                    <Track.Thumb>
                        <Thumb
                            Style="{StaticResource ScrollBarThumb}"
                            Margin="0 0"
                            Background="#FF9314ED"
                            BorderBrush="Black">
                            <Thumb.Effect>
                                <DropShadowEffect Color="#00f4d5"
                                                  Direction="0"
                                                  ShadowDepth="0"/>
                            </Thumb.Effect>
                        </Thumb>
                    </Track.Thumb>

                </Track>
            </Grid>
        </ControlTemplate>
        <Style x:Key="{x:Type ScrollBar}"
               TargetType="{x:Type ScrollBar}">
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
            <Setter Property="OverridesDefaultStyle"
                    Value="true"/>
            <Style.Triggers>
                <Trigger Property="Orientation"
                         Value="Vertical">
                    <Setter Property="Width"
                            Value="8"/>
                    <Setter Property="Height"
                            Value="Auto"/>
                    <Setter Property="Template"
                            Value="{StaticResource VerticalScrollBar}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FavsScrollViewer"
               TargetType="{x:Type ScrollViewer}">
            <Setter Property="OverridesDefaultStyle"
                    Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter Grid.Column="0"/>

                            <ScrollBar Name="PART_VerticalScrollBar"
                                       Grid.Column="1"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>


                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"
                              MinWidth="300"/>
            <ColumnDefinition Width="*"
                              MinWidth="300"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.ColumnSpan="2" Margin="0,20,0,20">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="\ExternalResources\Images\Icons\Logo.png"
                   Width="70"
                   RenderOptions.BitmapScalingMode="HighQuality"
                    HorizontalAlignment="Left"/>
                <TextBlock Text="НЕурОК" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50,0,0,0" FontSize="48" FontFamily="Comic Sans MS" Width="200" TextAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    VerticalAlignment="Center">
            <Button Height="50"
                    Background="#FFDAFF00"
                    Content="Менеджер базы"
                    Margin="5,15,5,10"
                    BorderThickness="0,0,0,0"
                    FontFamily="Comic Sans MS"
                    FontSize="20"
                    FontWeight="Bold"
                    Width="190"
                    Focusable="False"
                    IsTabStop="False"
                    Click="Button_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    MinHeight="300"
                    Margin="8,0,15,0">
            <StackPanel VerticalAlignment="Center">


                <ScrollViewer x:Name="BirthdaysTodayViewer"
                              RenderTransformOrigin="0.5,0.5"
                              HorizontalAlignment="Stretch"
                              Margin="0,0,0,0"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              MaxHeight="350">
                    <StackPanel>
                        <Border BorderBrush="Black" BorderThickness="2">
                            <StackPanel>
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Дни рождения сегодня:"
                                           FontFamily="Comic Sans MS"
                                           FontSize="18"/>
                                <TextBlock Padding="10 5" x:Name="BirthdaysTodayContainer" FontFamily="Comic Sans MS" FontSize="16" TextWrapping="Wrap">
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="2,0,2,2">
                            <StackPanel>
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Дни рождения завтра:"
                                           FontFamily="Comic Sans MS"
                                           FontSize="18"/>
                                <TextBlock Padding="10 5" x:Name="BirthdaysTomorrowContainer" FontFamily="Comic Sans MS" FontSize="16" TextWrapping="Wrap">
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="Black" BorderThickness="2,0,2,2">
                            <StackPanel>
                                <TextBlock HorizontalAlignment="Center"
                                           Text="Дни рождения послезавтра:"
                                           FontFamily="Comic Sans MS"
                                           FontSize="18"/>
                                <TextBlock Padding="10 5" x:Name="BirthdaysAfterTomorrowContainer" FontFamily="Comic Sans MS" FontSize="16" TextWrapping="Wrap">
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
