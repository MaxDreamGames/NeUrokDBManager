<Page x:Class="NeUrokDBManager.WPF.Views.Pages.ManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeUrokDBManager.WPF.Views.Pages"
      mc:Ignorable="d" 
      MinWidth="400"
      MinHeight="500"
      Title="Manage" Background="Plum" Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="TextBlockWrapStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel x:Name="ControlsPanel"
                Grid.Row="0"
                Margin="10 20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <Button x:Name="BackBtn" Click="BackBtn_Click" Content="Назад" Width="100" Height="35" BorderBrush="{x:Null}" FontFamily="Comic Sans MS" FontSize="16" Background="#FFE06DF3" IsTabStop="False" Focusable="False" Margin="0,0,15,0"/>
                        <Button x:Name="UpdateBtn" Click="UpdateBtn_Click" Content="Обновить" Width="100" Height="35" BorderBrush="{x:Null}" FontFamily="Comic Sans MS" FontSize="16" Background="MediumSpringGreen" IsTabStop="False" Focusable="False" Margin="0,0,15,0"/>
                        <TextBox x:Name="DeleteIdText" Width="50" Padding="2 1"  VerticalAlignment="Center" FontSize="14" Margin="0,0,5,0" BorderBrush="Black" Height="21"/>
                        <Button x:Name="DeleteBtn" Click="DeleteBtn_Click" Content="Удалить" Width="100" Height="35" BorderBrush="{x:Null}" FontFamily="Comic Sans MS" FontSize="16" Background="#FFFB6A5B" IsTabStop="False" Focusable="False" Margin="0,0,15,0"/>
                    </StackPanel>
                    <StackPanel x:Name="ColorMarkers" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Grid.Column="1">
                        <Border x:Name="NoneColor" MouseDown="NoneColor_MouseDown" Width="30" Height="30" Margin="2 0" BorderThickness="1">
                            <Border.Background>
                                <ImageBrush ImageSource="/ExternalResources/Images/Icons/NoneIcon.jpg" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Fill" TileMode="None"/>
                            </Border.Background>
                        </Border>
                        <Border MouseDown="SetCurrentColor" Background="#fff" Width="30" Height="30" Margin="2 0" BorderThickness="1"/>
                        <Border MouseDown="SetCurrentColor" Background="#FF3FCE00" Width="30" Height="30" Margin="2 0" BorderThickness="1"/>
                        <Border MouseDown="SetCurrentColor" Background="#FFCE0000" Width="30" Height="30" Margin="2 0" BorderThickness="1"/>
                        <Border MouseDown="SetCurrentColor" Background="#FFE0E200" Width="30" Height="30" Margin="2 0" BorderThickness="1"/>
                        <Border MouseDown="SetCurrentColor" Background="#FF00C9CE" Width="30" Height="30" Margin="2 0" BorderThickness="1"/>
                        <Border MouseDown="SetCurrentColor" Background="#FF001FCE" Width="30" Height="30" Margin="2 0" BorderThickness="1"/>
                        <Border MouseDown="SetCurrentColor" Background="#FF8A00CE" Width="30" Height="30" Margin="2 0" BorderThickness="1"/>
                        <Border MouseDown="SetCurrentColor" Background="#FFC300CE" Width="30" Height="30" Margin="2 0" BorderThickness="1"/>
                    </StackPanel >
                </Grid >
                <StackPanel Orientation="Horizontal" Margin="0,8,0,-5">
                    <TextBlock Text="Id:" FontFamily="Comic Sans MS" FontSize="14"/>
                    <TextBox x:Name="IdText"  FontFamily="Comic Sans MS" FontSize="14" Margin="5,0,0,0" MinWidth="35" BorderBrush="Black"/>
                    <TextBlock Text="Next Id:" FontFamily="Comic Sans MS" FontSize="14" Margin="20,0,0,0"/>
                    <TextBlock x:Name="NextIdText" Text="0" FontFamily="Comic Sans MS" FontSize="14" Margin="5,0,0,0" MinWidth="35"/>
                </StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="19*"/>
                        <ColumnDefinition Width="235*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Grid.RowSpan="2" MinWidth="500" MaxWidth="700" Width="670" HorizontalAlignment="Left" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">

                            <StackPanel Margin="0,5,0,5">
                                <TextBlock Text="Фио ученика:" FontFamily="Comic Sans MS" FontSize="14"/>
                                <TextBox x:Name="StudentFioText" FontSize="14" BorderBrush="Black"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,0,5">
                                <TextBlock Text="Фио родителя:" FontFamily="Comic Sans MS" FontSize="14"/>
                                <TextBox x:Name="ParentFioText" FontSize="14" BorderBrush="Black"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Дата рождения:" FontFamily="Comic Sans MS" FontSize="14"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="BirthdayDateDay"  FontSize="14" BorderBrush="Black" Width="25" HorizontalAlignment="Left" TextAlignment="Center" VerticalContentAlignment="Center" MaxLength="2"/>
                                    <TextBox x:Name="BirthdayDateMonth"  FontSize="14" BorderBrush="Black" Width="25" HorizontalAlignment="Left" TextAlignment="Center" VerticalContentAlignment="Center" MaxLength="2"/>
                                    <TextBox x:Name="BirthdayDateYear"  FontSize="14" BorderBrush="Black" Width="40" HorizontalAlignment="Left" TextAlignment="Center" VerticalContentAlignment="Center" MaxLength="4"/>
                                    <DatePicker x:Name="BirthdayDate" BorderBrush="{x:Null}" FontSize="14"/>

                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0,0,10,0">
                            <StackPanel Margin="0,5,0,5">
                                <TextBlock Text="Телефон:" FontFamily="Comic Sans MS" FontSize="14"/>
                                <TextBox x:Name="PhoneNumberText" FontSize="14" BorderBrush="Black"/>
                            </StackPanel>
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Доп. Телефон:" FontFamily="Comic Sans MS" FontSize="14"/>
                                    <TextBox x:Name="AnotherPhoneNumberText" FontSize="14" BorderBrush="Black"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="0,0,5,0" MaxWidth="70" VerticalAlignment="Center">
                                    <TextBlock Text="Класс:" FontFamily="Comic Sans MS" FontSize="14"/>
                                    <TextBox x:Name="FormText" FontSize="14" BorderBrush="Black"/>
                                </StackPanel>

                            </Grid>

                            <StackPanel >
                                <TextBlock Text="Дата регистрации:" FontFamily="Comic Sans MS" FontSize="14"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="RegistrationDateDay"  FontSize="14" BorderBrush="Black" Width="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLength="2"/>
                                    <TextBox x:Name="RegistrationDateMonth"  FontSize="14" BorderBrush="Black" Width="25" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLength="2"/>
                                    <TextBox x:Name="RegistrationDateYear"  FontSize="14" BorderBrush="Black" Width="40" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" UndoLimit="0" MaxLength="4"/>
                                    <DatePicker x:Name="RegistrationDate" BorderBrush="{x:Null}" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Grid.Row="0">
                            <StackPanel Margin="0,0,0,5">
                                <TextBlock Text="Направления:" FontFamily="Comic Sans MS" FontSize="14"/>
                                <TextBox x:Name="CoursesText" FontSize="14" TextWrapping="Wrap" Height="50" BorderBrush="Black" AcceptsReturn="True" AutoWordSelection="True" AcceptsTab="True"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Комментарии:" FontFamily="Comic Sans MS" FontSize="14"/>
                                <TextBox x:Name="ComentsText" FontSize="14" TextWrapping="Wrap" Height="50" BorderBrush="Black" AcceptsTab="True" AcceptsReturn="True" AutoWordSelection="True"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20,0,0,0">
                        <Button x:Name="SearchBtn" Click="SearchBtn_Click" Content="Поиск" Width="100" Height="35" BorderBrush="{x:Null}" FontFamily="Comic Sans MS" FontSize="16" Background="#FF107FF9" IsTabStop="False" Focusable="False" Margin="0,0,15,8"/>
                        <Button x:Name="AddBtn" Click="AddBtn_Click" Content="Добавить" Width="100" Height="35" BorderBrush="{x:Null}" FontFamily="Comic Sans MS" FontSize="16" Background="#FF1FFA00" IsTabStop="False" Focusable="False" Margin="0,0,15,15"/>
                        <Button x:Name="ClearBtn" Click="ClearBtn_Click" Content="Очистить" Width="100" Height="35" BorderBrush="{x:Null}" FontFamily="Comic Sans MS" FontSize="16" Background="#FFFAB700" IsTabStop="False" Focusable="False" Margin="0,0,15,0"/>
                    </StackPanel>
                    <TextBlock x:Name="SelectedCount" Grid.Column="2" Grid.Row="1" Text="Найдено: 0" FontFamily="Comic Sans MS" FontSize="14" Margin="20,0,0,0"/>
                </Grid>
            </StackPanel>
            <Border x:Name="DataPanel"
            Grid.Row="1">
                <DataGrid x:Name="DataGr"
                  Margin="10 0 10 20 "
                          EnableRowVirtualization="False"
                          EnableColumnVirtualization="False"
                          AutoGenerateColumns="False"  
          CanUserAddRows="False" CanUserDeleteRows="False"
          SelectionMode="Extended" SelectionUnit="CellOrRowHeader"
          IsReadOnly="False" GridLinesVisibility="None"
                          CanUserReorderColumns="False"
          RowHeaderWidth="20" CellEditEnding="DataGr_CellEditEnding" SelectedCellsChanged="DataGr_SelectedCellsChanged" FontSize="14" LoadingRow="DataGr_LoadingRow" >
                    <DataGrid.Resources>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="#FF7D7D7D" />
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FF9E9E9E" />
                                    <Setter Property="BorderBrush" Value="DimGray" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <!-- UserId (скрытый, если нужен только для привязки) -->
                        <DataGridTextColumn Header="ID" Binding="{Binding UserId}" IsReadOnly="True" ElementStyle="{StaticResource TextBlockWrapStyle}" SortMemberPath="UserId" SortDirection="Ascending"/>

                        <!-- StudentName -->
                        <DataGridTextColumn Header="Ученик" Binding="{Binding StudentName}" Width="*"
                            ElementStyle="{StaticResource TextBlockWrapStyle}"/>

                        <!-- Birthday (с форматированием даты) -->
                        <DataGridTextColumn Header="Дата рождения" Binding="{Binding Birthday, StringFormat=dd.MM.yyyy}" Width="80" ElementStyle="{StaticResource TextBlockWrapStyle}"/>

                        <!-- RegistrationDate -->
                        <DataGridTextColumn Header="Дата регистрации" Binding="{Binding RegistrationDate, StringFormat=dd.MM.yyyy}" Width="80" ElementStyle="{StaticResource TextBlockWrapStyle}"/>

                        <!-- Class -->
                        <DataGridTextColumn Header="Класс" Binding="{Binding Class}" Width="40" ElementStyle="{StaticResource TextBlockWrapStyle}"/>

                        <!-- ParentName -->
                        <DataGridTextColumn Header="Родитель" Binding="{Binding ParentName}" Width="*"
                            ElementStyle="{StaticResource TextBlockWrapStyle}"/>

                        <!-- Courses (с переносом текста) -->
                        <DataGridTextColumn Header="Курсы" Binding="{Binding Courses}" Width="*"
                            ElementStyle="{StaticResource TextBlockWrapStyle}"/>

                        <!-- PhoneNumber -->
                        <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" MinWidth="20" ElementStyle="{StaticResource TextBlockWrapStyle}"/>

                        <!-- Comments (многострочный текст) -->
                        <DataGridTextColumn Header="Комментарии" Binding="{Binding Comments}" Width="2*"
                            ElementStyle="{StaticResource TextBlockWrapStyle}"/>

                        <!-- AnotherPhoneNumber -->
                        <DataGridTextColumn Header="Доп. телефон" Binding="{Binding AnotherPhoneNumber}" MinWidth="20" ElementStyle="{StaticResource TextBlockWrapStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>

            </Border>
        </Grid>
    </Grid>
</Page>
